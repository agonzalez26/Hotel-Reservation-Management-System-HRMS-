                        onAction="#handleButtonAction" style="-fx-background-color: #152d54;" text="      Cancel      " textFill="WHITE">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>
                <TextField id="billAmountText" fx:id="billAmountText" editable="false" layoutX="513.0" layoutY="568.0" prefHeight="25.0" 
                           prefWidth="163.0" />
                <Label layoutX="390.0" layoutY="565.0" prefHeight="29.0" prefWidth="110.0" text="Bill Amount:" textFill="WHITE">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <Label alignment="CENTER" layoutX="288.0" layoutY="114.0" prefHeight="35.0" prefWidth="482.0" 
                       style="-fx-background-color: #152d54;" text="Add Guests to Your Stay" textFill="WHITE">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
                <ChoiceBox id="guestCount" fx:id="guestCountBox" layoutX="387.0" layoutY="265.0" prefHeight="25.0" prefWidth="256.0" />
            </children>
        </AnchorPane>
    </children>
